<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/profile.css">
  </head>
  <body>


    <div class="containerper">
        <div class="cardper">
          <div class="profile-picture">
            <% if(!user.dp) {%>
              <img src="/images/avatar.avif" alt="">
              <%}%>
              <img src="/images/uploads/<%= user.dp %>" alt="">
          </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username%></h3>
          <p class="description"><%= user.description %></p>
          <a href="/feed" class="button">Feed</a>
          <a href="/edit" class="button">Edit Profile</a>
          <a href="/logout" class="button">Logout</a>
        </div>
    </div>

    <div class="containerper form-container">
      <form action="/upload" method="post" enctype="multipart/form-data">
        <label for="file-input" class="file-label">
            <span>Choose File</span>
            <input type="file" name="file" id="file-input">
        </label>

        <label for="text-input" class="text-label">
            <span>Caption</span>
            <input type="text" name="filecaption" id="text-input" placeholder="Enter some caption">
        </label>

        <% if (errorMessage) { %>
          <div class="flash-message-error"><%= errorMessage %></div>
        <% } %>

        <button type="submit" class="submit-button">Upload your Image</button>
    </form>
    </div>

    <div class="container">

      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem;">
              <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= post.imagetext%></h5>
              </div>
            </div>
        <%})%>
      </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>